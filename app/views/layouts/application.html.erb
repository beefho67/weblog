<!DOCTYPE html>
<html>
  <head>
    <title>Weblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if !author_signed_in? %>
      <%= link_to "Sign Up", new_author_registration_path %>
      <%= link_to "Sign In", new_author_session_path %>
      <%= link_to "Sign in with Facebook", author_facebook_omniauth_authorize_path %>
    <% else %>
    <p> Hi! <%= current_author.email %></p> 
    <% end %>
    <%= yield %>
    <% if author_signed_in? %>
      <%= link_to "Log out", destroy_author_session_path, method: :delete %>
    <% end %>
  </body>
</html>
